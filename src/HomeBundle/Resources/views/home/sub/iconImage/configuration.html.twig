<div id='configurationIconButton' class='animatedButton'
     style="position: absolute;
     height: 30px;
     width: 30px;
     top: 240px;
     z-index: 1;">
    <img style='
         width:30px; 
         height:30px; 
         opacity: 0.9;' 
         src="files/images/icons/presentation/configuration.png" alt="Mountain View">
</div>
<script>
    var configurationIconButton = document.getElementById('configurationIconButton');
    
    configurationIconButton.addEventListener("click", show_configurationIconContent, false);
    
    function show_configurationIconContent()
    {
        var configurationIconContent = document.getElementById('configurationIconContent');
        
        if (configurationIconContent.style.display == "none")
        {
            clear_options();
            configurationIconContent.style.display = "block";
        } else
        {
            configurationIconContent.style.display = "none";
        }
    }
</script>