<div id="createBundle">
    status Session
</div>

<script>
    window.onload = prepareCreateBundle();

    function prepareCreateBundle()
    {
        var form = $('#check-session-ajax');
        var url = form.attr('action');

        $.post(url, function (data)
        {
            var sessionStatus = data[0].sessionStatus;

            if (sessionStatus === "0")
            {
                var createBundle = document.getElementById('createBundle');
                createBundle.innerHTML = "createBundle... logout mode";
            } else
            {
                var createBundle = document.getElementById('createBundle');
                createBundle.innerHTML = "createBundle... login mode";
            }
        }).fail(function () {
            alert('ERROR');
        });
    }
</script>





