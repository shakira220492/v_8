<div id='captionsIconButton' class='animatedButton'
     style="position: absolute;
     height: 30px;
     width: 30px;
     top: 0px;
     left: 120px;
     z-index: 1;">
    <img style='
         width:30px; 
         height:30px; 
         opacity: 0.9;
         z-index: 1;' 
         src="files/images/icons/playBanner/captions.png" alt="Mountain View">
</div>


<script>
    var captionsIconButton = document.getElementById("captionsIconButton");
    
    captionsIconButton.addEventListener("click", function () {
        captionsIconFunction();
    });
    
    function captionsIconFunction()
    {
        var closedCaptionArea = document.getElementById("closedCaptionArea");
        if (closedCaptionArea.style.display === "none")
        {
            closedCaptionArea.style.display = "block";
        }
        else
        {
            closedCaptionArea.style.display = "none";
        }
    }
</script>