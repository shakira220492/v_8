    function configureLyricswordTime(time) {
        var minutes = parseInt(time / 60, 10);
        var seconds = time % 60;
        var minutesString = "";
        var secondsString = "";
        
        if (minutes<=9)
        {
            minutesString = "0"+minutes;
        }
        else
        {
            minutesString = ""+minutes;
        }

        if (seconds<=9)
